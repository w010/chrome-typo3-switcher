{
  "manifest_version": 2,
  "author": "wolo.pl '.' studio",
  "homepage_url": "http://wolo.pl/",

  "name": "TYPO3 Backend-Frontend Handy Switcher",
  "short_name": "TYPO3 BE-FE Switch",
  "description": "Opens TYPO3 backend of current site in new tab, or frontend if already in backend. Works well even when running in subdirectory (based on base href tag)",
  "version": "0.9",

  "browser_action": {
    "default_icon": "Icons/icon-48.png",
    "default_title": " [Switch to backend] "
  },

  "icons": {
    "16": "Icons/icon-16.png",
    "32": "Icons/icon-32.png",
    "48": "Icons/icon-48.png",
    "128": "Icons/icon-128.png"
  },

  "background": {
    "scripts": ["eventPage.js"],
    "persistent": false
  },

  "permissions": [
    "activeTab",
    "tabs",
    "http://*/*",
    "https://*/*"
  ]
}
